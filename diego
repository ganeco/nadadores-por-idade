#include<stdio.h>
#include<stdlib.h>
#include<conio.h>
#include<math.h>
#include<string.h>

int main()
{

    int idade;
    char nome[30];

    printf("Digite seu nome: \n");
    scanf("%[^\n]s", nome); 
    setbuf(stdin, NULL);

    printf("Digite sua idade: \n");
    scanf("%d", &idade);

    if(idade>=5 && idade<=7)
    {
        printf ("Nadador: %s \n\n",nome);
        printf ("Ira competir na categoria:	INFANTIL A \n\n");
    }
    else if(idade>=8 && idade<=11)
    {
        printf ("Nadador: %s \n\n",nome);
        printf ("Ira competir na categoria:	INFANTIL B \n\n");
    }
    else if (idade>=12 && idade<=13)
    {
        printf ("Nadador: %s \n\n",nome);
        printf ("Ira competir na categoria:	JUVENIL A \n\n");
    }
    else if (idade>=14 && idade<=17)
    {
        printf ("Nadador: %s \n\n",nome);
        printf ("Ira competir na categoria:	JUVENIL B \n\n");
    }
    else if (idade>=18)
    {
        printf ("Nadador: %s \n\n",nome);
        printf ("Ira competir na categoria: ADULTO \n\n");
    }

    system ("PAUSE");

    return 0;
}
